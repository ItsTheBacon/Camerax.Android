<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="IconWithSelectableBackground" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">100dp</item>
        <item name="iconGravity">top</item>
        <item name="iconTint">@null</item>
        <item name="rippleColor">#949494</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="BaseBottomSheetCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="cardCornerRadius">24dp</item>
    </style>

    <style name="BaseStyleButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">#673AB7</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="BaseButtonWithoutBackground" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">16dp</item>
        <item name="rippleColor">#2196F3</item>
        <item name="strokeWidth">0dp</item>
    </style>

</resources>